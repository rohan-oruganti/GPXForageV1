# Database (Postgres)
# Get this from your database provider (e.g., Supabase, Neon, or local Postgres)
DATABASE_URL="postgresql://user:password@localhost:5432/gpxforage"

# Auth0 Configuration
# You can generate a secret by running: openssl rand -hex 32
AUTH0_SECRET='use [openssl rand -hex 32] to generate a 32 bytes value'
AUTH0_BASE_URL='http://localhost:3000'
AUTH0_ISSUER_BASE_URL='https://YOUR_AUTH0_DOMAIN'
AUTH0_CLIENT_ID='YOUR_AUTH0_CLIENT_ID'
AUTH0_CLIENT_SECRET='YOUR_AUTH0_CLIENT_SECRET'
# Optional: Scope for RBAC if needed later
AUTH0_SCOPE='openid profile email'

# AWS S3 Configuration
# Credentials for an IAM user with S3 read/write access
AWS_ACCESS_KEY_ID="YOUR_ACCESS_KEY"
AWS_SECRET_ACCESS_KEY="YOUR_SECRET_KEY"
AWS_REGION="us-east-1"
AWS_S3_BUCKET_NAME="gpxforage-uploads"
